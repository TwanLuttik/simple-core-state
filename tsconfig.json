{
	"compilerOptions": {
		"module": "ESNext",
		"declaration": true,
		"target": "ESNext",
		"outDir": "./dist",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"lib": ["es2015", "dom"],
		"strict": true,
		"esModuleInterop": true,
		"emitDeclarationOnly": true,

		"sourceMap": true,
		"jsx": "react-jsx"
	},
	"include": ["src/**/*"]
}
